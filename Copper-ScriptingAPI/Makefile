  config=debug
endif

ifndef verbose
  SILENT = @
endif

.PHONY: clean prebuild

ifeq ($(config),debug)
  CSC = csc
  RESGEN = resgen
TARGETDIR = ../Copper-Editor/assets/ScriptAPI
TARGET = $(TARGETDIR)/Copper-ScriptingAPI.dll
OBJDIR = ../Copper-Editor/assets/ScriptAPI/Int/Debug
  FLAGS = /noconfig
  DEPENDS =
  REFERENCES = 
define PREBUILDCMDS
endef
define PRELINKCMDS
endef
define POSTBUILDCMDS
endef
endif

ifeq ($(config),release)
  CSC = csc
  RESGEN = resgen
TARGETDIR = ../Copper-Editor/assets/ScriptAPI
TARGET = $(TARGETDIR)/Copper-ScriptingAPI.dll
OBJDIR = ../Copper-Editor/assets/ScriptAPI/Int/Release
  FLAGS = /optimize /noconfig
  DEPENDS =
  REFERENCES = 
define PREBUILDCMDS
endef
define PRELINKCMDS
endef
define POSTBUILDCMDS
endef
endif

FLAGS += /t:library 
REFERENCES += 

SOURCES += \
	Source/Components/Camera.cs \
	Source/Components/Component.cs \
	Source/Components/Transform.cs \
	Source/Core/Input.cs \
	Source/Core/InternalCalls.cs \
	Source/Core/KeyCodes.cs \
	Source/Editor/Editor.cs \
	Source/Math/Vector.cs \
	Source/Scene/Entity.cs \

EMBEDFILES += \

RESPONSE += $(OBJDIR)/Copper-ScriptingAPI.rsp
SHELLTYPE := posix
ifeq (.exe,$(findstring .exe,$(ComSpec)))
	SHELLTYPE := msdos
endif

all: prebuild $(EMBEDFILES) $(COPYFILES) $(TARGET)

$(TARGET): $(SOURCES) $(EMBEDFILES) $(DEPENDS) $(RESPONSE) | $(TARGETDIR)
	$(PRELINKCMDS)
	$(SILENT) $(CSC) /nologo /out:$@ $(FLAGS) $(REFERENCES) @$(RESPONSE) $(patsubst %,/resource:%,$(EMBEDFILES))
	$(POSTBUILDCMDS)

$(TARGETDIR):
	@echo Creating $(TARGETDIR)
ifeq (posix,$(SHELLTYPE))
	$(SILENT) mkdir -p $(TARGETDIR)
else
	$(SILENT) mkdir $(subst /,\\,$(TARGETDIR))
endif

$(RESPONSE): Makefile
	@echo Generating response file
ifeq (posix,$(SHELLTYPE))
	$(SILENT) rm -f $(RESPONSE)
else
	$(SILENT) if exist $(RESPONSE) del $(OBJDIR)\Copper-ScriptingAPI.rsp
endif
	@echo Source/Components/Camera.cs >> $(RESPONSE)
	@echo Source/Components/Component.cs >> $(RESPONSE)
	@echo Source/Components/Transform.cs >> $(RESPONSE)
	@echo Source/Core/Input.cs >> $(RESPONSE)
	@echo Source/Core/InternalCalls.cs >> $(RESPONSE)
	@echo Source/Core/KeyCodes.cs >> $(RESPONSE)
	@echo Source/Editor/Editor.cs >> $(RESPONSE)
	@echo Source/Math/Vector.cs >> $(RESPONSE)
	@echo Source/Scene/Entity.cs >> $(RESPONSE)

$(OBJDIR):
	@echo Creating $(OBJDIR)
ifeq (posix,$(SHELLTYPE))
	$(SILENT) mkdir -p $(OBJDIR)
else
	$(SILENT) mkdir $(subst /,\\,$(OBJDIR))
endif

prebuild: | $(OBJDIR)
	$(PREBUILDCMDS)
