RESCOMP = windres
INCLUDES += -I../Copper-Engine/lib/GLFW/include -I../Copper-Engine/lib/GLAD/include -I../Copper-Engine/lib/yaml-cpp/include -I../Copper-Engine/lib/ImGui
FORCE_INCLUDE +=
ALL_CPPFLAGS += $(CPPFLAGS) -MD -MP $(DEFINES) $(INCLUDES)
ALL_RESFLAGS += $(RESFLAGS) $(DEFINES) $(INCLUDES)
LINKCMD = $(CXX) -o "$@" $(OBJECTS) $(RESOURCES) $(ALL_LDFLAGS) $(LIBS)
define PREBUILDCMDS
endef
define PRELINKCMDS
endef
define POSTBUILDCMDS
